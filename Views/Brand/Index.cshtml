@model IEnumerable<POS1.Models.Brand>

@{
    ViewBag.Title = "Index";
}

<h2>Brand</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="fresh-datatables">
    <table id="fresh-datatables" class="table table-striped table-no-bordered table-hover">
        <thead>
            <tr>
                <th>Brand Name</th>
                <th>Description</th>     
                <th>Quantity</th>
                <th>Category Name</th>
                           
                <th class="disabled-sorting">Actions</th>
            </tr>
        </thead>
        
    </table>
</div>

<script type="text/javascript">

    $(document).ready(function () {

        TableLoad();

    });

    function TableLoad() {
        $('#fresh-datatables').DataTable({
            "searching": true,
            "ordering": true,
            "pagingType": "full_numbers",
            "ajax": "/Brand/getBrand",
            "columns": [
                { "data": "BName" },
                { "data": "BDesc" },
                { "data": "Quantity" },
                { "data": "Categoryid" },
               
                { "data": "Action" }
            ]
        });
    }
</script>