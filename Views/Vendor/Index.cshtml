@model IEnumerable<POS1.Models.Vendor>

@{
    ViewBag.Title = "Index";
}

<h2>Vendor</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="fresh-datatables">
    <table id="fresh-datatables" class="table table-striped table-no-bordered table-hover">
        <thead>
            <tr>
                <th>Vendor Name</th>
                <th>Contact Number</th>     
                <th>Remarks</th>
                <th>Account Name</th>
                <th>Company Name</th>             
                <th class="disabled-sorting">Actions</th>
            </tr>
        </thead>
        
    </table>
</div>

<script type="text/javascript">

    $(document).ready(function () {

        TableLoad();
       
    });

    function TableLoad() {
        $('#fresh-datatables').DataTable({
            "searching": true,
            "ordering": true,
            "pagingType": "full_numbers",
            "ajax": "/Vendor/getVendor",
            "columns": [
                { "data": "VName" },
                { "data": "VContactNumber" },
                { "data": "Remarks" },
                { "data": "CompanyName" },
                { "data": "AccountName" },
                { "data": "Action" }
            ]
        });
    }
</script>